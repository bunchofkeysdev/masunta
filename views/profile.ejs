  <div class="container">
    <div class="row mt-5">
      <div>
        <div>
          <p> Hello <strong>
              <%= user.userName %>
            </strong>

          </p>
          <div>
            <% for(let j=0; j<profile.length; j++) {%>
              <%if(profile[j].user==user.id && profile[j].image){ %>
                <img class="profile-pic" src=" <%=profile[j].image%>" />

                <%}%>
                  <%}%>
          </div>

        </div>
        <div class="col-6 mt-5">
          <h2>Change Profile picture</h2>
          <form action="/post/createProfilePic" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
              <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>

      </div>
      <div>
        <ul class="row list-unstyled">
          <%if (posts.length> 0){%>
            <h2>Archives</h2>
            <% for(var i=0; i<posts.length; i++) {%>
              <%if(posts[i].taskDone){ %>
                <div>
                  <li class="col-12">
                    <div class="container">


                      <div class='postBox'>

                        <a href="/post/<%= posts[i]._id%>">
                          <h3 class="post">
                            <%= posts[i].caption%>
                          </h3>

                        </a>
                        <span><i class="fa fa-check check" aria-hidden="true"></i></span>
                      </div>
                    </div>

                  </li>
                </div>



                <%} else{ %>
                  <div class="">
                    <li class="col-12">
                      <div class="container ">
                        <div class='postBox'>

                          <a href="/post/<%= posts[i]._id%>">
                            <h3 class="post">
                              <%= posts[i].caption%>
                            </h3>
                            <!-- <img class="img-fluid" src="<%= posts[i].image%>"> -->
                          </a>

                          <!-- <div class="mb-3">
                            <label for="caption" class="form-label"></label>
                            <textarea class="form-control postCaption" id="caption" name="caption"
                              placeholder="I will do..."></textarea>
                          </div> -->
                        </div>
                      </div>
                    </li>
                  </div>

                  <%}%>
                    <% } %>
                      <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>
      </div>
    </div>
  </div>
  </div>
